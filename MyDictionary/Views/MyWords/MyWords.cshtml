@model IEnumerable<MyDictionary.Core.Domain.UserWord>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spelling)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Home" asp-action="LookupWord" 
                   asp-route-word="@item.Spelling">@item.Spelling</a>
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { Spelling = item.Spelling })
            </td>
        </tr>
}
    </tbody>
</table>
