@model MyDictionary.Web.ViewModels.ResultViewModel


<div class="row mb-3">
    <div class="col-md-12">
         <span style="font-style: italic;">
            <input hidden asp-for="PartOfSpeech" />
            @Model?.PartOfSpeech  
        </span>
    </div>
    <div class="col-md-12 ml-2 ">
        @if (Model != null)
        {
            <input hidden asp-for="Definition" />
            @(string.Format($"{Model.Number} {Model.Definition}"))<br />

            @if (Model.Synonyms != null)
            {
                <span style="color: #188038;">Similar: </span>

                /*cant use foreach and need to have individual hidden fields in order to model bind properly*/
                @for (int i = 0; i < Model.Synonyms?.Count; i++)
                {
                    <span class="pr-3">
                        <a asp-controller="Home"
                           asp-action="LookupWord"
                           asp-route-word="@Model.Synonyms[i]">@Model.Synonyms[i]</a>
                    </span>
                }
            }

        }
    </div>      
</div>